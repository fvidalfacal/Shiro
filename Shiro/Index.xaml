<mui:ModernWindow x:Class="Shiro.Index"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  Title="Shiro"
                  MinWidth="1000"
                  MinHeight="600"
                  ContentSource="/Pages/Clients.xaml"
                  IsTitleVisible="True"
                  ToolTip="{DynamicResource {x:Type ToolTip}}">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Clients">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Ajouter un client" Source="Pages/AddClient.xaml" />
                <mui:Link DisplayName="Voir la liste des clients" Source="Pages/Clients.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Commerciaux">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Voir la liste des commerciaux" Source="Pages/Commerciaux.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Rendez-vous">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Ajouter un rendez vous" Source="Pages/appointment.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>